<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <EditText
        android:id="@+id/et_location_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_dialog_elements"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:hint="@string/search_city"
        android:imeOptions="actionSearch"
        android:maxLines="1"/>

    <ListView
        android:id="@+id/location_search_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_dialog_elements"
        android:layout_marginLeft="@dimen/margin_dialog_elements"
        android:layout_marginRight="@dimen/margin_dialog_elements"
        android:layout_weight="1">
    </ListView>
</LinearLayout>
